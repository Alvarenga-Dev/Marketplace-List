<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarketplaceList" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/secondary</item>
        <item name="android:colorBackground">@color/primary</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- SplashScreenTheme -->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Settings -->
    <style name="SettingsScreenTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
    </style>

    <!-- BottomSheet Style -->
    <style name="BottomSheetWithoutDraggable" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="behavior_draggable">false</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonStyle">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">@dimen/cornerRadiusButton</item>
    </style>

    <style name="ButtonErrorStyle" parent="ButtonStyle">
        <item name="backgroundTint">@color/error</item>
    </style>

    <style name="ButtonDefaultStyle" parent="ButtonStyle">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Texts -->
    <style name="TitleFragmentStyle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sizeTitle</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/text_color_generic</item>
        <item name="android:textSize">@dimen/largerText</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:textColor">@color/text_color_light_generic</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="HighlightTextStyle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/text_color_highlight_generic</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <!-- TextInput -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/text_color_generic</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadiusButton</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadiusButton</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadiusButton</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadiusButton</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:padding">@dimen/marginOrPaddingDefault</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolbarDefault">
        <item name="titleTextAppearance">@style/TitleTextAppearance</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIcon">@drawable/ic_arrow_left</item>
        <item name="android:background">@color/primary</item>
    </style>
</resources>