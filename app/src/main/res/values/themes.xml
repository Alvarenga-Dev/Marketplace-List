<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarketplaceList" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/grey_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/dark</item>
        <item name="android:colorBackground">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">@dimen/cornerRadiusButton</item>
    </style>

    <style name="TitleFragmentStyle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">@dimen/sizeTitle</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/largerText</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:textColor">#A6131313</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="HighlightTextStyle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadiusButton</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadiusButton</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadiusButton</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadiusButton</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:padding">@dimen/marginOrPaddingDefault</item>
    </style>
</resources>